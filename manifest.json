{
  "manifest_version": 2,
  "name": "Copy Selected Tab Info",
  "description": "Copies the URLs of the currently selected tabs to clipboard",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["tabs", "contextMenus", "clipboardWrite"],
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    }
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "Copy Selected Tab Info"
  },
  "options_ui": {
    "page": "options/index.html"
  }
}
